@model IEnumerable<GetAllProductDto>

@{
    ViewData["Title"] = "Product";
}

<h1>Products</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            
            <th>
                Price
            </th>
            <th>
                Image
            </th>
            <th>
                Category Name
            </th>
           
            <th>
                IsActive
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Name
            </td>
          
            <td>
                @item.Price
            </td>
            <td>
                @item.Image
            </td>
            <td>
                @item.Category.Name
            </td>
            <td>
                @item.IsActive
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> | <a class="confirmDeletion" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="d-flex w-100 justify-content-center">
    <pagination page-count="@ViewBag.TotalPages" page-target="/admin/products" page-number="@ViewBag.PageNumber" page-range="@ViewBag.PageRange"></pagination>
</div>

              